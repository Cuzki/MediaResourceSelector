<?xml version="1.0" encoding="utf-8"?>
<com.example.cuzki.mediaselectordemo.photo.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.cuzki.mediaselectordemo.photo.SquareImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"/>
    <com.example.cuzki.mediaselectordemo.photo.CheckableImageView
        android:id="@+id/iv_select"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="3dp"
        android:paddingLeft="12dp"
        android:paddingTop="3dp"
        android:paddingBottom="12dp"
        android:src="@drawable/ic_ablum_select_selector"
        android:scaleType="centerCrop"/>
</com.example.cuzki.mediaselectordemo.photo.CheckableRelativeLayout>