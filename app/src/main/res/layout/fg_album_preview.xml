<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent">
    <com.example.cuzki.mediaselectordemo.photo.HackyViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/ll_top_header"
        android:gravity="center_vertical"
        android:background="@android:color/black"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:id="@+id/btn_return"
            android:drawableLeft="@drawable/ic_back"
            android:drawablePadding="3dp"
            android:textSize="15sp"
            android:text="@string/str_return"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            />
        <com.example.cuzki.mediaselectordemo.photo.CheckableImageView
            android:id="@+id/iv_select"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_ablum_select_selector"
            android:scaleType="centerCrop"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/rl_bottom"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_toLeftOf="@+id/btn_finish"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:id="@+id/tv_count"
            android:textColor="@android:color/white"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_finish"
            android:text="完成"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>